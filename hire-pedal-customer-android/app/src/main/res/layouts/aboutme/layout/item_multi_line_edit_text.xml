<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/multi_line_edit_text_item_layout"
    android:minHeight="55dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/multi_line_edit_text_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="51dp"
        android:layout_marginBottom="2dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="2dp"
        app:hintAnimationEnabled="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/multi_line_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="51dp"
            android:singleLine="false"
            android:textSize="16sp"
            app:hintAnimationEnabled="true" />

    </android.support.design.widget.TextInputLayout>

    <ImageView
        android:id="@+id/multi_line_edit_text_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="8dp"
        android:layout_weight="1"
        android:src="@drawable/ic_apps_color"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/multi_line_edit_text_layout"
        app:layout_constraintEnd_toEndOf="@+id/multi_line_edit_text_layout"
        app:layout_constraintTop_toBottomOf="@+id/multi_line_edit_text_layout" />
</android.support.constraint.ConstraintLayout>