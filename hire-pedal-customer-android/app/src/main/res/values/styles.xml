<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColorHint">@color/edit_text_hint_color</item>
        <item name="android:buttonStyle">@style/AccentButton</item>
        <item name="android:dialogTheme">@style/DatePicker</item>
    </style>
    
    <style name="DatePicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <!--Login Screen related styles-->
    <style name="RegisterNowButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

        <style name="AccentButton" parent="Widget.AppCompat.Button.Colored">
            <item name="colorButtonNormal">@color/colorPrimary</item>
            <item name="android:textColor">@color/color_white</item>
        </style>

    <style name="WhiteButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@android:color/white</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@color/color_white</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="homeAsUpIndicator">@drawable/ic_back</item>
    </style>

    <style name="DrawerArrowStyle" parent="Base.V7.Widget.AppCompat.Toolbar">
        <item name="iconTint">@color/color_white</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>


    <style name="CarStyle">
        <item name="android:padding">5dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Base.Widget.AppCompat.Spinner.Underlined.BMT">
        <item name="android:background">@drawable/abc_spinner_textfield_background_material</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>


    <style name="line">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/reg_devider_color</item>
    </style>

    <style name="textStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textSize">20px</item>
    </style>

    <style name="style_tab_hint">
        <item name="android:textSize">15sp</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--Car ServicesList Styles -->
    <style name="service_textStyle_dark">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">#1a140d</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="service_textStyle_light">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#737373</item>
    </style>


    <style name="style_btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:theme">@style/AccentButton</item>
        <item name="android:paddingBottom">5dip</item>
        <item name="android:paddingTop">5dip</item>
        <item name="android:layout_margin">15dip</item>
        <item name="android:minHeight">47dip</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Theme.Dialog" parent="@android:style/Theme.Dialog"/>

    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/color_white</item>
        <item name="colorControlActivated">@color/color_white</item>
        <item name="android:textColorHint">@color/login_edittext_color</item>
    </style>
    <style name="CameraAlert" parent="Theme.AppCompat.Light.Dialog.Alert"/>

   

</resources>
